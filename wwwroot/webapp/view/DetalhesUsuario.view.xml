<mvc controllerName="sap.ui.demo.walkthrough.controller.DetalhesUsuario" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
    <Page showNavButton="true" navButtonPress="onClicarVoltar">

        <headerContent>
            <Button text="Editar Usuário" icon="sap-icon://user-edit" type="Emphasized" press="onBotaoEditar" />
            <Button text="Deletar Usuário" icon="sap-icon://delete" type="Emphasized" press="onBotaoDeletar" />
        </headerContent>

        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="false" columnsL="2" layout="ResponsiveGridLayout" title="Informações do usuário" singleContainerFullSize="false">

                        <Label text="Id" />
                        <Text text="{usuario>/id}" />
                            
                        <Label text="Name" />
                        <Text text="{usuario>/nome}" />

                        <Label text="Email" />
                        <Text text="{usuario>/email}" />

                        <Label text="Data de Nascimento" />
                        <Text text="{= ${usuario>/dataNascimento} !== null ? ${usuario>/dataNascimento}: 'Data não informada'}" />

                        <Label text="Data de Criacão" />
                        <Text text="{usuario>/dataCriacao}" />

                </f:SimpleForm>
            </VBox>
        </content>

    </Page>
</mvc>