<mvc:View controllerName="sap.ui.demo.walkthrough.controller.UsuarioList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
  <Page>

    <headerContent>
      <Title text="{i18n>ToolbarUsuarioTitulo}" />
      <SearchField width="80%" search="onFiltrarUsuarios" liveChange="onFiltrarUsuarios"/>
      <Button text="{i18n>BotaoAdicionar}" type="Emphasized" icon="sap-icon://add-employee" press="onClicarAdcionarUsuario" />
    </headerContent>
    
    <List id="listaDeUsuarios" class="sapUiResponsiveMargin" width="auto" items="{usuarios>/}" growing="true" growingThreshold="5">

      <items>
        <StandardListItem type="Navigation" press="onClicarItemDaLista" title="{usuarios>nome}" icon="sap-icon://account" description="{usuarios>email}" />
      </items>

    </List>

  </Page>
</mvc:View>