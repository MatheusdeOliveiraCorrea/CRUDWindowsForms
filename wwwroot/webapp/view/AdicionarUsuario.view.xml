<mvc:View controllerName="sap.ui.demo.walkthrough.controller.AdicionarUsuario" xmlns="sap.m" xmlns:teste="sap.ui.webc.main" xmlns:mvc="sap.ui.core.mvc">

    <Page title="Definir Valores para Usuário" showNavButton="true" id="paginaAdicionar" navButtonPress=".onClicarVoltar">

        <Panel>
            <Label text="Nome do Usuário:" />
            <Input name="Nome" placeholder="Escreva o nome aqui" id="campoNome" value="{usuario>/nome}"/>

            <Label class="sapUiSmallMarginTop" text="Email:" />
            <Input name="Email" placeholder="Escreva o email aqui" type="Email" id="campoEmail" value="{usuario>/email}"/>
    
            <Label class="sapUiSmallMarginTop" text="Senha:" />
            <Input name="Senha"	placeholder="Escreva a senha aqui" type="Password" id="campoSenha" value="{usuario>/senha}"/>
    
            <Label class="sapUiSmallMarginTop" text="Data De Nascimento Do Usuário:" />
            <DatePicker value="{usuario>/dataNascimento}" placeholder="Defina a data de nascimento do usuário no ícone de calendário" id="campoDataNascimento" width="84%" displayFormat="short" valueFormat="yyyy-MM-dd" />
    
            <Label class="sapUiSmallMarginTop" text="Data de Cadastro Do Usuário: (este campo não pode ser alterado)" />
            <teste:DatePicker enabled="false" width="84%" displayFormat="short" valueFormat="yyyy-MM-dd" id="campoDataCadastro" value="{usuario>/dataCriacao}"/>
        </Panel>
    
        <FlexBox justifyContent="End">
            <Button width="130%" class="sapUiLargeMarginEnd" text="Cancelar" press=".onClicarCancelar"/>
            <Button class="sapUiLargeMarginBegin" icon="sap-icon://save" text="Salvar" press=".aoClicarEmSalvar" />
        </FlexBox>

    </Page>

</mvc:View> 